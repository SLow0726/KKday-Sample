            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="21dp"/>
    <TextView
            android:id="@+id/tv_small_cons_3_2"
            android:text="現場請出示 QR code"
            android:textSize="12sp"
            android:textColor="@color/vpi__background_holo_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_small_cons_3_1"/>


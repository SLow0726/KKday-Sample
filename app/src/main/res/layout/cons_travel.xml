<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
            android:id="@+id/view3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="320dp"
            app:layout_constraintHorizontal_bias="0.495"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="90dp"/>
    <ImageView
            android:id="@+id/iv_travel_title"
            app:layout_constraintLeft_toLeftOf="@+id/cons_travel"
            android:layout_width="17dp"
            android:layout_height="41dp" app:srcCompat="@drawable/title2"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="7dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp"/>
    <TextView
            android:id="@+id/tv_travel_title"
            android:textSize="17sp"
            android:textColor="@color/vpi__background_holo_dark"
            app:layout_constraintLeft_toLeftOf="@+id/iv_travel_title"
            android:background="@color/default_circle_indicator_fill_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="21dp"
            android:text="行程介紹"/>
    <ImageView
            android:id="@+id/iv_travel_time"
            app:layout_constraintTop_toBottomOf="@id/tv_travel_title"
            android:layout_width="20dp" android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"/>
    <TextView

            android:id="@+id/tv_travel_time"
            android:textSize="12sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_travel_title"
            android:text="所需時間：6小時"
            android:layout_marginTop="18dp" app:layout_constraintStart_toEndOf="@+id/iv_travel_time"
            android:layout_marginStart="10dp" android:layout_marginLeft="10dp"/>

    <TextView
            android:textColor="@color/vpi__background_holo_dark"
            android:textSize="12sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:text="– 行程特色 –"
            app:layout_constraintTop_toBottomOf="@+id/view3" android:layout_marginTop="24dp"
            android:id="@+id/textView15"/>
    <TextView
            android:textColor="@color/vpi__background_holo_dark"
            android:textSize="12sp"
            android:layout_width="328dp" android:layout_height="wrap_content"
            android:text="TEXTVIEW" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15" android:layout_marginTop="26dp"
            android:id="@+id/tv_travel_1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <TextView
            android:textColor="@color/vpi__background_holo_dark"
            android:textSize="12sp"
            android:layout_width="328dp" android:layout_height="wrap_content"
            android:text="TEXTVIEW" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/tv_travel_1"
            android:id="@+id/tv_travel_2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <TextView
            android:textColor="@color/vpi__background_holo_dark"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:text="TEXTVIEW"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_travel_2" android:id="@+id/tv_travel_3"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_width="328dp"/>
    <TextView

            android:textColor="@color/vpi__background_holo_dark"
            android:textSize="12sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="– 使用說明 –" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/tv_travel_3"/>
    <Button
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:text="閱讀更多"
            android:textColor="@color/design_default_color_secondary"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="350dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>
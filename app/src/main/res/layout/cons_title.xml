<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:layout_width="15dp" android:layout_height="15dp"
               android:id="@+id/iv_lightning"
               android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="11dp"
               android:layout_marginStart="11dp"/>
    <RatingBar
            android:id="@+id/ratingBar2"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:rating="4"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.875"
            android:layout_marginTop="112dp"/>

    <ImageView android:layout_width="16dp" android:layout_height="16dp"
               android:id="@+id/iv_gps"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="11dp" android:layout_marginStart="11dp"
               android:layout_marginTop="53dp" app:layout_constraintTop_toTopOf="parent"/>

    <ImageView android:layout_width="15dp" android:layout_height="15dp"
               android:layout_marginTop="12dp"
               app:layout_constraintTop_toBottomOf="@+id/iv_gps"
               app:layout_constraintStart_toStartOf="parent"
               android:id="@+id/iv_mark"
               android:layout_marginLeft="11dp" android:layout_marginStart="11dp"/>

    <TextView
            android:textSize="16sp"
            android:textColor="@color/vpi__background_holo_dark"
            android:layout_width="277dp" android:layout_height="wrap_content"
            android:id="@+id/title_title"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <TextView
            android:text="TWD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/iv_mark"/>
    <TextView
            android:text="台灣, 台南"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_gps" android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"/>
    <TextView
            android:text="產品編號 ："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" app:layout_constraintStart_toEndOf="@+id/iv_mark"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.01"/>
    <TextView
            android:text="350"
            android:textColor="@color/design_default_color_secondary"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="14dp" app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <TextView
            android:text="立即確認並取發送憑證"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/iv_lightning" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.01"/>
    <TextView
            android:text="(28)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/ratingBar2" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" android:layout_marginTop="110dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:textColor="@color/vpi__background_holo_dark"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView14"/>
    <View
            android:id="@+id/view" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="320dp" app:layout_constraintTop_toBottomOf="@+id/title_title"
            android:layout_marginTop="124dp" app:layout_constraintHorizontal_bias="0.491"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
    />
    <View
            android:id="@+id/view2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="320dp" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginTop="44dp"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>
    <TextView
            android:text="21264"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" app:layout_constraintStart_toEndOf="@+id/textView10"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
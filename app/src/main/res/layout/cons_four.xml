<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/iv_fourButton"
            android:layout_width="46dp" android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="行程表"
            android:textColor="@color/vpi__background_holo_dark"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/four_btn_1"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toEndOf="@+id/iv_fourButton"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"/>
    <View
            android:id="@+id/view_btn_1"
            app:layout_constraintLeft_toLeftOf="@id/four_btn_1"
            app:layout_constraintRight_toRightOf="@id/cons_four"
            android:layout_width="300dp"
            android:layout_marginTop="50dp"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="地圖"
            android:textColor="@color/vpi__background_holo_dark"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/four_btn_2"
            app:layout_constraintTop_toBottomOf="@+id/four_btn_1"
            android:layout_marginTop="29dp"
            app:layout_constraintStart_toEndOf="@+id/iv_fourButton" android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"/>
    <View
            android:id="@+id/view_btn_2"
            app:layout_constraintLeft_toLeftOf="@id/four_btn_1"
            app:layout_constraintRight_toRightOf="@id/cons_four"
            android:layout_width="300dp"
            android:layout_marginTop="50dp"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/view_btn_1"/>
    <TextView
            android:text="費用項目"
            android:textColor="@color/vpi__background_holo_dark"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/four_btn_3"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/four_btn_4"
            app:layout_constraintStart_toEndOf="@+id/iv_fourButton" android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"/>
    <View
            android:id="@+id/view_btn_3"
            app:layout_constraintLeft_toLeftOf="@id/four_btn_1"
            app:layout_constraintRight_toRightOf="@id/cons_four"
            android:layout_width="300dp"
            android:layout_marginTop="50dp"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/view_btn_2"
    />
    <TextView
            android:text="注意事項"
            android:textColor="@color/vpi__background_holo_dark"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/four_btn_4"
            app:layout_constraintStart_toEndOf="@+id/iv_fourButton" android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/four_btn_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>